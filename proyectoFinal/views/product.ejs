<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<%- include('partials/head.ejs') %>
</head>
<body>
	<!-- Header -->
	<%- include('partials/headerNoLogeado.ejs') %> 

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> nombre</h2>  <!-- agregar nombre -->
			<p class="product-detail-description">
				<a href="/product/edit">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="" alt="imagen" class="product-detail-img">    <!-- agregar imagen -->
					<p class="product-detail-description">
				descripcion	</p>                               <!-- agregar descripcion -->
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for(let i=0; i<comentarios.length; i++){%>
							<article>
								<img src="https://via.placeholder.com/35" alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="profile.html">Nombre usuario: </a> </strong>
									 <%=comentarios[i].comentario%></p>
								</div>
							</article>
							<%}%>
					
					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
    <%- include('partials/footer.ejs') %> 
	<!-- /footer -->

</body>	
</html>