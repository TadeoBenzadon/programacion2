<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<%- include('partials/head.ejs') %>
</head>
<body>
	<!-- Header -->
		<%- include('./partials/header.ejs') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/stylesheets/images/banner.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
			<h2 class="products-title">Productos</h2> 
			</div>
			<!-- Show the "ultimos" products -->

			<% for (const product of productos) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				  <section class="product-box">
					<a href="/product/detail/<%= product.id %> ">
					  <figure class="product-box_image">
						<img src="/images/<%=product.electro_image %>" alt="">
					  </figure>
					  <article class="product-box_data">
						<h2><%= product.electro_name %></h2>
						<p>Cantidad de comentarios: <%= product.electro_comments %> </p>
						<img src="<%= product.user.avatar %>" style=" border-radius: 50%;" alt="">
					  <a style="text-decoration-line: underline !important; font-size: 15px;" href='/users/<%= product.user.id %> '>AÃ±adido por <%= product.user_name %> </a>

					  
						</article>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>
	
	<!-- footer -->
	<%- include('partials/footer.ejs') %> 
	<!-- /footer -->
</body>	
</html>
