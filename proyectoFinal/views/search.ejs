<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<%- include('partials/head.ejs') %>
</head>

<body>
	<!-- Header -->
	<%- include('partials/header.ejs') %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<% if( user.log ){ %>
				<div class="col-12">
				  <h2 class="products-title text-center">Bienvenid@ <%= user.name %> </h2>
				</div>  <!-- VER USER.NAME -->
			  
			  <%}%> 
			<div class="col-12">
				<h2 class="products-title">Resultados de <em>"<%= result %>"</em></h2>
			</div>
			<% if (respuesta != '') { %>
				<h2 style='color:red'><%= respuesta %> '<%= result %>'</h2>
			  <% } %> 
			<!-- Show the "ultimos" products -->
			<% if (respuesta == "") { %>
				<% for (const product of products) { %>
			
			<div class="col-12 ">
				<section class="product-box">
					<a href="/product/detail/<%= product.id %>">
						<figure class="product-box_image">
							<img src="<%=productos.electro_image%>" alt="">
						</figure>

						<article class="product-box_data">
							<h2><%=productos.electro_name%></h2>
							<p><%=productos.electro_descripcion%></p>
							<p>Cantidad de comentarios: <%= product.electro_comments.length %> </p>
						</article>
					</a>
				</section>

			</div>
<%}%>
        <% } %>
			
	<!-- footer -->
	<%- include('partials/footer.ejs') %> 
	<!-- /footer -->
</body>

</html>